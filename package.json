{
  "name": "mnml-client",
  "version": "0.1.0",
  "description": "Client library for Minimal Chat",
  "author": "Matthew Mihok <matthew@minimal.chat>",
  "repository": "minimalchat/mnml-client.git",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "npm run build:lite && npm run build:full",
    "build:lite": "webpack --config webpack.lite.config.js --progress --colors",
    "build:full": "webpack --config webpack.full.config.js --progress --colors",
    "build:watch": "npm run build:full -- --watch",
    "build:lite:watch": "npm run build:lite -- --watch",
    "build:full:watch": "npm run build:full -- --watch",
    "lint": "eslint src --ext .js,.jsx",
    "coverage": "jest --coverage && cat coverage/lcov.info | coveralls",
    "dev": "echo 'WARNING: This command is deprecated, use `npm run build:watch` instead' && npm run build:watch"
  },
  "jest": {
    "setupFiles": [
      "./test/jest.setup.js"
    ],
    "setupTestFrameworkScriptFile": "node_modules/jest-enzyme/lib/index.js",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/webpack*.js",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/test/**",
      "!**/example/**",
      "!**/src/styles.js",
      "!**/src/styleOverrides.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/cfg/mocks/fileMock.js",
      "^.+\\.(css|scss)$": "<rootDir>/test/mocks/styleMock.js"
    },
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "((test|spec))\\.(js|jsx)$"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "socket.io-client": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.11.14",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.0",
    "enzyme-to-json": "^1.4.5",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest": "^18.1.0",
    "jest-cli": "^17.0.3",
    "jest-enzyme": "^2.1.0",
    "react-addons-test-utils": "^15.4.1",
    "react-test-renderer": "^15.4.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0"
  }
}
