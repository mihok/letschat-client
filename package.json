{
  "name": "mnml-client",
  "version": "0.0.1",
  "description": "Client library for Minimal Chat",
  "author": "Matthew Mihok <matthew@minimal.chat>",
  "repository": "minimalchat/mnml-client.git",
  "license": "BSD-3-Clause",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "babel src  --source-maps --plugins transform-decorators-legacy --presets es2015,stage-0,react --out-file dist/mnml-0.0.1.js",
    "lint": "eslint src --ext .js,.jsx",
    "coverage": "jest --coverage && cat coverage/lcov.info | coveralls",
    "dev": "webpack --watch --progress --colors"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "node_modules/jest-enzyme/lib/index.js",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/coverage/**",
      "!**/test/**"
    ],
    "coverageReporters": [
      "lcov",
      "text"
    ],
    "coverageDirectory": "coverage",
    "testRegex": "(/test/.*|\\.(test|spec))\\.(js|jsx)$"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^7.1.0",
    "babel-plugin-istanbul": "^2.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-loader": "^6.2.10",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.11.14",
    "enzyme": "^2.6.0",
    "eslint": "^3.10.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "jest-cli": "^17.0.3",
    "jest-enzyme": "^2.0.0",
    "react": "^15.3.2",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.3.2",
    "react-jss": "^4.1.3",
    "react-redux": "^4.4.5",
    "react-test-renderer": "^15.4.1",
    "redux": "^3.6.0",
    "socket.io-client": "^1.5.1",
    "webpack": "^1.14.0"
  }
}
